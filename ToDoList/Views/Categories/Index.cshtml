@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Category>;

<h1>Categories</h1>
<br>
@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

@foreach (Category category in Model)
{
  <h3>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</h3>
}
<br>
<h4>@Html.ActionLink("Add new category", "Create")</h4>
<h4>@Html.ActionLink("Delete All Categories", "DeleteAll")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>