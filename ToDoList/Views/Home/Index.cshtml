@{
  Layout = "_Layout";
}
@using System.Security.Claims
<h1>Welcome to the To Do List!</h1>
<br>

@if (User.Identity.IsAuthenticated)
{

  <h3>@Html.ActionLink("See all categories", "Index", "Categories")</h3>
  <h3>@Html.ActionLink("See all items", "Index", "Items")</h3>
}
else
{
  <h3>@Html.ActionLink("Create an account", "Index", "Account")</h3>
  <h3>@Html.ActionLink("Log in", "Login", "Account")</h3>
}
